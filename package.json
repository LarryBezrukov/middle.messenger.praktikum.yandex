{
	"name": "messenger",
	"version": "1.0.0",
	"engines": {
		"node": ">=16",
		"npm": ">=8"
	},
	"targets": {
		"default": {
			"engines": {
				"browsers": ">= 50%"
			}
		}
	},
	"scripts": {
		"dev": "parcel src/index.html --no-cache",
		"build": "parcel build src/index.html --no-cache --no-optimize --no-scope-hoist",
		"start": "npm run build && nodemon app.js",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint --fix 'src/**/*.ts'",
		"format": "prettier --write 'src/**/*.{js,ts,css,scss,pug,json}'"
	},
	"keywords": [],
	"author": "Illarion Bezrukov",
	"license": "ISC",
	"devDependencies": {
		"@parcel/transformer-css": "2.7.0",
		"@parcel/transformer-sass": "2.6.2",
		"@prettier/plugin-pug": "2.1.1",
		"@typescript-eslint/eslint-plugin": "5.30.5",
		"@typescript-eslint/parser": "5.30.5",
		"eslint": "8.19.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-airbnb-typescript": "17.0.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-prettier": "4.2.1",
		"express": "4.18.1",
		"nodemon": "2.0.18",
		"parcel": "2.6.2",
		"parcel-transformer-pug-precompile": "1.0.6",
		"prettier": "2.7.1",
		"stylelint": "14.9.1",
		"stylelint-config-standard-scss": "5.0.0",
		"stylelint-scss": "4.2.0",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"nanoid": "4.0.0"
	}
}
